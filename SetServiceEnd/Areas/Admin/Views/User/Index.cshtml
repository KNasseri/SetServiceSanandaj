
@model IEnumerable<SetServiceEnd.Areas.Admin.Models.UsersViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Managers_Layout.cshtml";
}

<h2>لیست کاربران سیستم</h2>

<table id="usersTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Family)</th>
            <th>@Html.DisplayNameFor(m => m.Mobile)</th>
            <th>@Html.DisplayNameFor(m => m.NationalCode)</th>
            <th>دستورات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>>@item.Family</td>
                <td>>@item.Mobile</td>
                <td>>@item.NationalCode</td>
                <td>
                    <a href="@Url.Action("Edit","User",new { area = "Admin", id = @item.Id })">ویرایش</a>
                    <a href="#">نمایش</a>
                    <a href="#">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>

