
@model SetServiceEnd.Areas.Admin.Models.EditUserViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Managers_Layout.cshtml";
}

<h2>ویرایش</h2>

@using (Html.BeginForm("Edit", "User", new { area = "Admin" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken();
    @Html.HiddenFor(m => m.Id)
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @for = "user_name" })
                @Html.TextBoxFor(m => m.Name, new { @id = "user_name" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Family, new { @for = "user_family" })
                @Html.TextBoxFor(m => m.Family, new { @id = "user_family" })
                @Html.ValidationMessageFor(m => m.Family, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <br />

    <button type="submit" class="btn btn-primary">دخیره مشخصات</button>
}

