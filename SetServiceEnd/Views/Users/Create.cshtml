@model SetServiceEnd.Models.CreateUsersViewModel
@{
    ViewBag.Title = "ایجاد کاربر جدید";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ایجاد کاربر جدید</h2>
@using (Html.BeginForm("Create", "Users", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="alert alert-warning">
        <strong>توجه! </strong> لطفا اطلاعات را کامل وارد نمایید
    </div>

    <div class="row">
        <div class="col-md-6 col-sm-12 col-xs-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @for = "txtName" })
                @Html.TextBoxFor(m => m.Name, new { @id = "txtName" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Family, new { @for = "txtFamily" })
                @Html.TextBoxFor(m => m.Family, new { @id = "txtFamily" })
                @Html.ValidationMessageFor(m => m.Family, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NationalCode, new { @for = "txtNc" })
                @Html.TextBoxFor(m => m.NationalCode, new { @id = "txtNc" })
                @Html.ValidationMessageFor(m => m.NationalCode, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PhoneNumber, new { @for = "txtPh" })
                @Html.TextBoxFor(m => m.PhoneNumber, new { @id = "txtPh" })
                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @for = "txtmail" })
                @Html.TextBoxFor(m => m.Email, new { @id = "txtmail" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-6 col-sm-12 col-xs-12">

        </div>
    </div>

    <div class="col-md-12 text-center">
        <button id="btnSubmit" type="submit" class="btn btn-info">ارسال فرم</button>
    </div>

}




}

